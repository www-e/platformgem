      {
        id: '1',
        title: ' ',
        description: '   ',
        icon: '',
        earnedAt: new Date(Date.now() - 5 * 24 * 60 * 60 * 1000),
        category: 'completion' as const
      },
      {
        id: '2',
        title: ' ',
        description: '  5  ',
        icon: '',
        earnedAt: new Date(Date.now() - 3 * 24 * 60 * 60 * 1000),
        category: 'streak' as const
      }
