        case 'PENDING':
          paymentStatus = 'pending';
          break;
        case 'COMPLETED':
          paymentStatus = 'completed';
          break;
        case 'FAILED':
          paymentStatus = 'failed';
          break;
      }
    }

    return NextResponse.json({
      isEnrolled: false,
      paymentStatus
    });

  } catch (error) {
    console.error('Enrollment status API error:', error);
    return NextResponse.json({ isEnrolled: false }, { status: 500 });
  }
