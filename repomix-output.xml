                  </motion.div>
                </motion.button>
              </div>
            </div>
          </div>
        </motion.nav>
      </div>

      {/* Mobile Menu */}
      <AnimatePresence>
        {isMenuOpen && (
          <motion.div
            className="md:hidden fixed top-20 left-1/2 transform -translate-x-1/2 w-full max-w-sm mx-auto px-4 z-40"
            variants={fadeInUp}
            initial="initial"
            animate="animate"
