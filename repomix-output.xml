  summary,
  isLoading,
}: PaymentSummaryCardsProps) {
  if (!summary) {
    return (
      <StatsCards 
        stats={[]} 
        isLoading={true} 
        loadingCardCount={5}
        gridCols="grid-cols-1 md:grid-cols-2 lg:grid-cols-5"
      />
    );
  }

  const statsData = [
    {
      id: 'total-payments',
      title: ' ',
      value: summary.total,
      subtitle: ' ',
      icon: CreditCard,
      cardClassName: 'border-l-4 border-l-blue-500'
    },
    {
      id: 'completed-payments',
      title: '',
      value: summary.completed,
      subtitle: `${summary.total > 0 ? ((summary.completed / summary.total) * 100).toFixed(1) : 0}%  `,
      icon: CheckCircle,
      cardClassName: 'border-l-4 border-l-green-500'
    },
    {
      id: 'pending-payments',
      title: '',
      value: summary.pending,
      subtitle: ' ',
      icon: Clock,
      cardClassName: 'border-l-4 border-l-yellow-500'
