  .glass-medium {
    background: var(--glass-medium);
    backdrop-filter: blur(25px);
    -webkit-backdrop-filter: blur(25px);
    border: 1px solid var(--glass-border);
  }
  
  .glass-strong {
    background: var(--glass-strong);
    backdrop-filter: blur(30px);
