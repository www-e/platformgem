            <PieChartIcon className="w-4 h-4 ml-2" />
            
          </Button>
        </div>

        <div className="flex items-center gap-2">
          {/* Time Range Selector */}
          <div className="flex items-center border rounded-lg">
            {[
              { key: '7d', label: '7 ' },
