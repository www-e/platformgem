    case 'pending':
      return '';
    case 'refunded':
      return '';
    case 'failed':
      return '';
    case 'processing':
      return ' ';
    default:
      return status;
  }
}

export function getStatusVariant(status: string): 'default' | 'secondary' | 'destructive' {
  switch (status) {
    case 'completed':
      return 'default';
    case 'pending':
    case 'processing':
      return 'secondary';
    case 'refunded':
    case 'failed':
