{
  "name": "e-learning-platform-tests",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for the e-learning platform",
  "scripts": {
    "test": "playwright test",
    "test:student-journey": "playwright test --grep \"Student Journey\"",
    "test:student-auth": "playwright test --grep \"Student Auth\"",
    "test:student-courses": "playwright test --grep \"Student Courses\"",
    "test:student-payments": "playwright test --grep \"Student Payments\"",
    "test:student-dashboard": "playwright test --grep \"Student Dashboard\"",
    "test:student-profile": "playwright test --grep \"Student Profile\"",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:ui": "playwright test --ui",
    "install-browsers": "playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "faker": "^6.6.6",
    "dotenv": "^16.3.1"
  }
}